Project lesson_organizer {
    database_type: 'SQLite'
}

Table student_status {
    id integer [pk, not null, unique, increment]
    name varchar
    changed_at datetime
}

enum user_role {
    admin
    assistant
    instructor
}

Table student {
    id integer [pk, not null, unique, increment]
    first_name varchar [not null]
    last_name varchar
    created_date datetime [not null]
    status integer [ref: > student_status.id]
    notes_general varchar
    notes_strengths varchar
    notes_weaknesses varchar
    notes_future varchar
    date_started datetime
    classes_per_week integer
}

Table student_level {
    id integer [pk, not null, unique, increment]
    student integer [ref: > student.id]
    level integer [ref: > level.id]
    start_date datetime
}

Table lesson {
    id integer [pk, not null, unique, increment]
    datetime datetime [not null]
    plan varchar
    concepts varchar
    created_date datetime [not null]
    notes varchar
}

Table student_lesson_quiz {
    id integer [pk, not null, unique, increment]
    student integer [ref: > student.id]
    lesson_id integer [not null, ref: > lesson.id]
    quiz integer [ref: > quiz.id]
    points integer
    notes varchar

}

Table quiz {
    id integer [pk, not null, unique, increment]
    name varchar [not null]
    max_points integer [not null]
    unit id [ref: > unit.id]
}

Table lesson_student {
    id integer [pk, not null, unique, increment]
    lesson_id integer [not null, ref: > lesson.id]
    student_id integer [not null, ref: > student.id]
}

Table unit {
    id integer [pk, not null, unique, increment]
    name varchar [not null]
    level id [ref: > level.id]
}

Table level {
    id integer [pk, not null, unique, increment]
    name varchar
    curriculum integer [ref: > curriculum.id]
}

Table curriculum {
    id integer [pk, not null, unique, increment]
    varchar name [not null]
}

Table stock_image {
    id integer [pk, not null, unique, increment]
    istock_name varchar
    istock_id integer
    uses varchar
}

Table user {
    id integer [pk, not null, unique, increment]
    first_name varchar [not null]
    last_name varchar [not null]
    created_date datetime [not null]
    last_login datetime
    email varchar [not null]
    password varchar [not null]
    role user_role [not null]
}